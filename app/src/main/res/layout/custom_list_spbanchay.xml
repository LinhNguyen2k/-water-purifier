<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_list_SPBanChay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY"
                        android:id="@+id/image_spBanChay"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        />

                    <TextView
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_6sdp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="#0C0C0C"
                        android:id="@+id/tv_name_spBanChay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_spBanChay" />
                    <TextView

                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textSize="@dimen/_6sdp"
                        android:textColor="#D50101"
                        android:id="@+id/tv_price_spBanChay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name_spBanChay" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>